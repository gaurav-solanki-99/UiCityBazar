<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">\

    <LinearLayout
        android:id="@+id/headerll"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:background="@color/red"
        >

    </LinearLayout>
    <ImageView
        android:layout_marginTop="15dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_baseline_format_align_justify_24"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        app:tint="@color/white" />
    <ImageView
        android:layout_marginTop="15dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_location_on_24"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:background="@color/appSafron"
        app:tint="@color/white" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cardheader"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardCornerRadius="25dp"
            android:layout_below="@+id/headerll"
            android:layout_marginTop="-50dp"
            android:elevation="15dp"
            android:layout_marginBottom="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"

                >
                <ImageView
                    android:layout_alignParentLeft="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/uericon"
                    android:id="@+id/profile"

                    />
                   <TextView
                       android:id="@+id/btnlogin"
                       android:layout_marginLeft="25dp"
                       android:layout_toRightOf="@+id/profile"
                       android:layout_gravity="center_vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                       android:text="Login"
                       android:textSize="20sp"
                       android:paddingLeft="15dp"
                       android:paddingRight="15dp"
                       android:paddingTop="5dp"
                       android:paddingBottom="5dp"
                       android:background="@drawable/bluecornerbutton"
                       />
                    <View
                        android:id="@+id/llview"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/appBlue"
                        android:layout_toRightOf="@+id/btnlogin"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        />
                <TextView
                    android:id="@+id/btnSignin"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/llview"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="SignIn"
                    android:textSize="20sp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/bluecornerbutton"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/cardbtn1"
        android:layout_below="@+id/cardheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            app:cardBackgroundColor="@color/uiblue"
            app:cardCornerRadius="25dp"
            >

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            app:cardBackgroundColor="@color/uipurpule"
            app:cardCornerRadius="25dp"
            >

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/cardbtn2"
        android:layout_below="@id/cardbtn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            app:cardBackgroundColor="@color/uiorange"
            app:cardCornerRadius="25dp"
            >

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            app:cardBackgroundColor="@color/uipink"
            app:cardCornerRadius="25dp"
            >

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <androidx.cardview.widget.CardView
     android:id="@+id/cardll3"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.5"

        app:cardCornerRadius="25dp"
        android:layout_below="@id/cardbtn2"
        android:layout_marginTop="25dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradien_purple_blue"
            >

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/cardll3"
        android:layout_marginTop="15dp"
        android:background="#B1B0B0"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />

    <androidx.cardview.widget.CardView

        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="0.5"

        app:cardCornerRadius="25dp"
        android:layout_below="@id/cardll3"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/gradientll"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradientwhitegray"


            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:drawableLeft="@drawable/ic_baseline_arrow_forward_24"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingLeft="15dp"
                android:layout_marginTop="15dp"
                android:drawableTint="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:drawableLeft="@drawable/ic_baseline_arrow_forward_24"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingLeft="15dp"
                android:layout_marginTop="15dp"
                android:drawableTint="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAQ"
                android:drawableLeft="@drawable/ic_baseline_arrow_forward_24"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingLeft="15dp"
                android:layout_marginTop="15dp"
                android:drawableTint="@color/black"
                /> <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download App"
            android:drawableLeft="@drawable/ic_baseline_arrow_forward_24"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:paddingLeft="15dp"
            android:layout_marginTop="15dp"
            android:drawableTint="@color/black"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:drawableLeft="@drawable/ic_baseline_arrow_forward_24"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingLeft="15dp"
                android:layout_marginTop="15dp"
                android:drawableTint="@color/black"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>



